# LLM Configuration
# Choose your provider: openai, anthropic, google, ollama
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here
MODEL_NAME=gpt-4-turbo-preview

# For local deployment without external APIs
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.1

# Data.gov.in Configuration
DATA_GOV_API_KEY=your-data-gov-api-key  # Get from https://data.gov.in/
DATA_GOV_BASE_URL=https://api.data.gov.in/resource

# Vector Database
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=text-embedding-3-small

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400  # 24 hours in seconds
USE_CACHE=true

# Application Settings
DEBUG=true
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Data Settings
DATA_DIRECTORY=./data
MAX_DATASET_SIZE_MB=100
AUTO_UPDATE_INTERVAL=3600  # 1 hour

# Performance
MAX_CONCURRENT_REQUESTS=10
QUERY_TIMEOUT=30  # seconds
